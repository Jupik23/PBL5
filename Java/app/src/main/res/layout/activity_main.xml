<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Tachometers -->
        <com.github.anastr.speedviewlib.TubeSpeedometer
            android:id="@+id/tachometer1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            tools:ignore="MissingClass" />

        <com.github.anastr.speedviewlib.TubeSpeedometer
            android:id="@+id/tachometer2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            tools:ignore="MissingClass" />

        <com.github.anastr.speedviewlib.TubeSpeedometer
            android:id="@+id/tachometer3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            tools:ignore="MissingClass" />

        <com.github.anastr.speedviewlib.TubeSpeedometer
            android:id="@+id/tachometer4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            tools:ignore="MissingClass" />

        <com.github.anastr.speedviewlib.TubeSpeedometer
            android:id="@+id/tachometer5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            tools:ignore="MissingClass" />

        <!-- Connect button -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to ESP32"
            android:layout_marginTop="16dp" />

        <!-- Text Outputs -->
        <TextView
            android:id="@+id/tvT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T1: 0.00"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvT2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T2: 0.00"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvT3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T3: 0.00"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvVoltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Voltage: 0.00"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvCurrent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current: 0.00"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Zapisz" />

            <Button
                android:id="@+id/btnDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Wypisz" />
            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Reset" />
        </LinearLayout>
        <TextView
            android:id="@+id/tvFileContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zawartość pliku:"
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:background="#EFEFEF" />
    </LinearLayout>

</ScrollView>
